<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/golden_button"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="11dp"
    android:paddingLeft="11dp"
    android:paddingRight="11dp"
    android:paddingTop="11dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textAlignment="center" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left" >

            <TextView
                android:id="@+id/items_title"
                style="@style/FormFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/setting"
                android:gravity="center_vertical"
                android:text="text tesgt" />

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/listview_image_bg" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingTop="11dip" >

            <TextView
                style="@style/FormFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="Display In Search" />

            <ToggleButton
                android:id="@+id/productvisibilityonoff"
                android:layout_width="60dip"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:background="@drawable/golden_button"
                android:text="ToggleButton" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="11dip" >

            <TextView
                style="@style/FormFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="Interval Prediction" />

            <ToggleButton
                android:id="@+id/productmanualonoff"
                android:layout_width="60dip"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:background="@drawable/golden_button"
                android:text="ToggleButton" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/intervallayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="11dip" >

            <TextView
                style="@style/FormFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="7dp"
                android:text="Every"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/product_edit_text_days"
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:hint="Interval"
                android:inputType="number" />

            <TextView
                style="@style/FormFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="7dp"
                android:text="days"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>
    </LinearLayout>

