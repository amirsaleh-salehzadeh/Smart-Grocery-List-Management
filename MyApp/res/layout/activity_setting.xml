<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".SettingActivity" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/titlelo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@drawable/grey_button"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_home_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/golden_button"
                    android:drawableLeft="@drawable/home" />

                <!-- android:layout_toLeftOf="@id/btn_imageview" -->

                <TextView
                    style="@style/MedFont"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/btn_home_setting"
                    android:text="Settings" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="11dp"
                android:gravity="left"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_setting_products"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/golden_button"
                android:gravity="left"
                android:orientation="horizontal"
                android:padding="5dp"
                android:paddingTop="33dp" >

                <ImageView
                    android:layout_width="51dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    style="@style/ButtonFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=" Products" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="20"
                    android:gravity="right"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/infoProducts"
                        android:layout_width="51dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:src="@drawable/help" />
                </LinearLayout>
            </LinearLayout>

            <!-- <ImageButton -->
            <!-- android:id="@+id/btn_setting_products" -->
            <!-- android:layout_width="fill_parent" -->
            <!-- android:layout_height="@dimen/button_height" -->
            <!-- android:background="@drawable/golden_button" -->
            <!-- android:src="@drawable/ic_launcher" -->
            <!-- android:text="Products" /> -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="7dp"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_setting_predection"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/golden_button"
                android:gravity="left"
                android:orientation="horizontal"
                android:padding="5dp" >

                <ImageView
                    android:layout_width="51dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/suggestion" />

                <TextView
                    style="@style/ButtonFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=" Suggestion" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="20"
                    android:gravity="right"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/infoSuggestion"
                        android:layout_width="51dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:src="@drawable/help" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="7dp"
                android:orientation="horizontal" >
            </LinearLayout>
            <!-- <LinearLayout -->
            <!-- android:layout_width="fill_parent" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:orientation="vertical" -->
            <!-- android:padding="5dp" > -->


            <!-- <Button -->
            <!-- android:id="@+id/btn_setting_reminder" -->
            <!-- style="@style/ButtonFont" -->
            <!-- android:layout_width="fill_parent" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:background="@drawable/golden_button" -->
            <!-- android:text="Reminder" /> -->
            <!-- </LinearLayout> -->

            <LinearLayout
                android:id="@+id/btn_setting_profile"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/golden_button"
                android:gravity="left"
                android:orientation="horizontal"
                android:padding="5dp" >

                <ImageView
                    android:layout_width="51dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/profile" />

                <TextView
                    style="@style/ButtonFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=" Profile" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="20"
                    android:gravity="right"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/infoProfile"
                        android:layout_width="51dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:src="@drawable/help" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="7dp"
                android:orientation="horizontal" >
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_height"
                android:gravity="left"
                android:orientation="horizontal"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/globalimgv"
                    android:layout_width="51dp"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/global" />

                <TextView
                    style="@style/ButtonFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/globalimgv"
                    android:text=" Global Connection " />

                <ToggleButton
                    android:id="@+id/btn_setting_global"
                    style="@style/FormFont"
                    android:layout_width="51dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@+id/globaliv"
                    android:background="@drawable/golden_button"
                    android:gravity="center_horizontal"
                    android:textOff="OFF"
                    android:textOn="ON" />

                <LinearLayout
                    android:id="@id/globaliv"
                    android:layout_width="51dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/infoGlobal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right"
                        android:src="@drawable/help" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="7dp"
                android:orientation="horizontal" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/btn_setting_colorcodelayout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_height"
                android:gravity="left"
                android:orientation="horizontal"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/performimv"
                    android:layout_width="51dp"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/performance" />

                <TextView
                    style="@style/ButtonFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/performimv"
                    android:text="Colour Coding" />

                <ToggleButton
                    android:id="@+id/btn_setting_colorcode"
                    style="@style/FormFont"
                    android:layout_width="51dp"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/colorcodehelp"
                    android:background="@drawable/golden_button"
                    android:gravity="center_horizontal"
                    android:textOff="OFF"
                    android:textOn="ON" />

                <LinearLayout
                    android:id="@id/colorcodehelp"
                    android:layout_width="51dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/infoColorcode"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right"
                        android:src="@drawable/help" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="7dp"
                android:orientation="horizontal" >
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_height"
                android:gravity="left"
                android:orientation="horizontal"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="51dp"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/image_activate" />

                <TextView
                    style="@style/ButtonFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/imageView1"
                    android:text="Display Image" />

                <ToggleButton
                    android:id="@+id/btn_setting_imageview"
                    style="@style/FormFont"
                    android:layout_width="51dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_toLeftOf="@+id/imageviewhelp"
                    android:background="@drawable/golden_button"
                    android:gravity="center_horizontal"
                    android:textOff="OFF"
                    android:textOn="ON" />

                <LinearLayout
                    android:id="@id/imageviewhelp"
                    android:layout_width="51dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_weight="20"
                    android:gravity="right"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/infoImageview"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right"
                        android:src="@drawable/help" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="7dp"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_setting_back"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="bottom"
                android:background="@drawable/golden_button"
                android:gravity="left"
                android:orientation="horizontal"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="51dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/returnico" />

                <TextView
                    android:id="@+id/textView1"
                    style="@style/ButtonFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=" Back" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>